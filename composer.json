{
    "name": "seworqs/json-editor",
    "description": "A dot-notated, chainable JSON editor for PHP with built-in file support and robust array handling.",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "json", "editor", "json manipulation", "dot notation", "json writer",
        "json file", "php", "seworqs", "array handling", "immutable"
    ],
    "version": "1.3.0",
    "authors": [
        {
            "name": "S.E. Franke",
            "email": "sven.franke@seworqs.eu"
        }
    ],
    "autoload": {
        "psr-4": {
            "Seworqs\\Json\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seworqs\\Json\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "adbario/php-dot-notation": "^3.3",
        "seworqs/semver": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11"
    },
    "scripts": {
        "test": "phpunit"
    }
}
